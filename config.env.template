# ==========================================
# ChatSpecies Environment Configuration Template
# ==========================================
# Usage Instructions:
# 1. Copy this file as .env
# 2. Populate with actual API Keys and configuration
# 3. Ensure .env is added to .gitignore
# ==========================================

# ------------------------------------------
# Core LLM Configuration (Required)
# ------------------------------------------

# Qwen (Tongyi Qianwen) API
# Get Address: https://dashscope.aliyun.com/
DASHSCOPE_API_KEY=sk-your-qwen-api-key-here

# Model Selection
QWEN_MODEL_NAME=qwen-turbo
# Available options: qwen-turbo (recommended), qwen-plus, qwen-max

# Temperature Parameter Configuration
QWEN_TEMPERATURE_CONVERSATION=0.0
QWEN_TEMPERATURE_SCORING_POS=0.2
QWEN_TEMPERATURE_SCORING_NEG=0.0
QWEN_TEMPERATURE_SEMANTIC=0.4
QWEN_TEMPERATURE_ROUTER=0.0

# ------------------------------------------
# Vector Embedding Configuration (Required)
# ------------------------------------------

QWEN_EMBEDDING_MODEL=text-embedding-v3
# Available options: text-embedding-v3 (recommended, latest), text-embedding-v2, text-embedding-v1
VECTOR_DB_PATH=db6_qwen

# ------------------------------------------
# Speech Synthesis Configuration (Required)- Qwen TTS
# ------------------------------------------

# TTS Provider (Supports Qwen only)
TTS_PROVIDER=qwen

# Qwen TTS Configuration
QWEN_TTS_MODEL=qwen3-tts-flash          # Recommended: qwen3-tts-flash (Latest, best sound quality)
QWEN_TTS_VOICE=Cherry                   # Cherry (female voice, lively) or Ethan (male voice)

QWEN_TTS_LANGUAGE=Chinese               # Recommendations should match the language of the text
QWEN_TTS_STREAM=false                   # Non-streaming (stream=False) URL retrieval

# ------------------------------------------
# Agent Search Configuration (Optional)
# ------------------------------------------

USE_WEB_SEARCH=true
WEB_SEARCH_PROVIDER=duckduckgo
ENABLE_SMART_ROUTING=true
ROUTING_CONFIDENCE_THRESHOLD=0.7

# Tavily（Optional）
TAVILY_API_KEY=tvly-your-api-key
TAVILY_MAX_RESULTS=3

# ------------------------------------------
# RAG Retrieval Configuration
# ------------------------------------------

RAG_MMR_K=4
RAG_MMR_FETCH_K=20
RAG_MMR_LAMBDA=0.5

ENABLE_HISTORY_DEDUP=true
MAX_HISTORY_ROUNDS=10

ENABLE_HYBRID_SEARCH=false
ENABLE_RERANKING=false

# Cohere（Optional）
COHERE_API_KEY=your-cohere-key
COHERE_RERANK_MODEL=rerank-english-v3.0
COHERE_RERANK_TOP_N=3

# ------------------------------------------
# Database Configuration (Required)
# ------------------------------------------

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_TABLE_NAME=interactions

# ------------------------------------------
# Function Switch
# ------------------------------------------

FEATURE_QWEN_TTS=true
FEATURE_SMART_AGENT=true
FEATURE_HYBRID_RAG=false
FEATURE_GIFT_SYSTEM=true
FEATURE_VOICE_SELECTION=true

# ------------------------------------------
# Backup Configuration
# ------------------------------------------

OPENAI_API_KEY=sk-your-openai-key
ENABLE_OPENAI_FALLBACK=false

